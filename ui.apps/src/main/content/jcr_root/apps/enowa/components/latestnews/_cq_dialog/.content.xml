<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Properties"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <targetPageType
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            granite:class="cq-dialog-dropdown-showhide"
                            fieldLabel="Choose News Type"
                            name="./targetPageType">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                cq-dialog-dropdown-showhide-target=".connect-layout-show-hide"/>
                        <items jcr:primaryType="nt:unstructured">
                            <select
                                    jcr:primaryType="nt:unstructured"
                                    text="Select the Target Page"
                                    value="empty"/>
                            <currentAboutPageNews
                                    jcr:primaryType="nt:unstructured"
                                    text="Show the Latest News in About Page"
                                    value="isAboutNews"/>
                            <currentWaterPageNews
                                    jcr:primaryType="nt:unstructured"
                                    text="Show the Latest News in Water Page"
                                    value="isWaterNews"/>
                            <currentEnergyPageNews
                                    jcr:primaryType="nt:unstructured"
                                    text="Show the Latest News in Energy Page"
                                    value="isEnergyNews"/>
                            <currentHydrogenPageNews
                                    jcr:primaryType="nt:unstructured"
                                    text="Show the Latest News in Hydrogen Page"
                                    value="isHydrogenNews"/>
                            <currentInvestPageNews
                                    jcr:primaryType="nt:unstructured"
                                    text="Show the Latest News in Invest Page"
                                    value="isInvestNews"/>
                            <currentLandingPageÅ…ews
                                    jcr:primaryType="nt:unstructured"
                                    text="Show the Latest News in Landing Page"
                                    value="isLandingPageNews"/>
                        </items>
                    </targetPageType>
                </items>
            </column>
        </items>
    </content>
</jcr:root>