<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="General Copy Component"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/select"
                            class="cq-dialog-dropdown-showhide"
                            cq-dialog-dropdown-showhide-target=".carousel-showhide-target"
                            fieldLabel="layout Type:"
                            name="./layout">
                        <items jcr:primaryType="nt:unstructured">
                            <foureight jcr:primaryType="nt:unstructured"
                                   text="4 lefts 8 rights"
                                   value="fourEight"/>
                            <eightfour jcr:primaryType="nt:unstructured"
                                   text="7 lefts 5 rights"
                                   value="eightFour"/>
                            <sixsix jcr:primaryType="nt:unstructured"
                                       text="6 lefts 6 rights one"
                                       value="sixSix"/>
                            <sixsixone jcr:primaryType="nt:unstructured"
                                    text="6 lefts 6 rights two"
                                    value="varone"/>
                            <center jcr:primaryType="nt:unstructured"
                                 text="center"
                                 value="center"/>
                        </items>
                    </layout>
                    <Bordercolor
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/select"
                            fieldLabel="Colour Type:"
                            name="./bgColor">
                        <items jcr:primaryType="nt:unstructured">
                            <white jcr:primaryType="nt:unstructured"
                                   text="White"
                                   value="#FFFFFF"/>
                            <paleAqua jcr:primaryType="nt:unstructured"
                                   text="Pale Aqua"
                                   value="#CAEAEA"/>
                            <lightCyan jcr:primaryType="nt:unstructured"
                                 text="Light Cyan"
                                 value="#8FD3D3"/>
                            <darkBlue jcr:primaryType="nt:unstructured"
                                 text="Cyan Blue"
                                 value="#2E3D4C"/>
                        </items>
                    </Bordercolor>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
